{
  "name": "force-language-services",
  "description": "Code base to host the Salesforce CLI commands.",
  "version": "0.0.0",
  "author": "Amanda Stern",
  "bugs": "https://github.com/forcedotcom/force-language-services/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@salesforce/command": "^1.4.1",
    "@salesforce/core": "^1.3.2",
    "mkdirp": "^0.5.1",
    "tslib": "^1",
    "yeoman-environment": "^2.4.0",
    "yeoman-generator": "^4.0.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/yeoman-generator": "3.1.3",
    "chai": "^4",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "globby": "^8",
    "mocha": "^5",
    "nyc": "^14.1.1",
    "prettier": "1.16.4",
    "pretty-quick": "^1.11.1",
    "shx": "0.2.2",
    "ts-node": "^8",
    "tslint": "^5",
    "typescript": "~3.3",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.0.0"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/forcedotcom/force-language-services",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "topics": {
      "hello": {
        "description": "Commands to say hello."
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "forcedotcom/force-language-services",
  "scripts": {
    "clean:lib": "node scripts/remove-lib",
    "build:templates": "node scripts/build-templates",
    "lint": "tslint --project . --config tslint.json --format stylish",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "yarn run clean:lib && yarn run build:templates && tsc -b && oclif-dev manifest && oclif-dev readme",
    "reformat": "prettier --config .prettierrc --write './*.{js,json}' './**/*.{ts,json}'",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
